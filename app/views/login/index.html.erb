<h1>Please Login</h1>
<%= form_tag auth_path do %>
<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <%=label_tag :client_id, 'Client ID', { class: "form-label"} %>
      <%=text_field_tag :client_id %>
    </div>

    <div class="mb-3">
      <%=label_tag :secret, 'Client Secret', { class: "form-label"} %>
      <%=text_field_tag :secret %>
    </div>

    <div class="mb-3">
      <%=label_tag :api_key, 'API Key', { class: "form-label"} %>
      <%=text_field_tag :api_key%>
    </div>

    <%= submit_tag "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>